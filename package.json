{
  "name": "simple-dynamo-ts",
  "version": "1.0.2",
  "description": "A simple TypeScript library for working with DynamoDB using decorators and a repository pattern",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "sh hooks/pre-commit",
      "pre-push": "sh hooks/pre-push"
    }
  },
  "keywords": [
    "dynamodb",
    "aws",
    "typescript",
    "repository",
    "decorators",
    "orm"
  ],
  "author": "Blimit",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/lib-dynamodb": "^3.940.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "peerDependencies": {
    "@aws-sdk/lib-dynamodb": "^3.0.0"
  },
  "packageManager": "pnpm@10.19.0"
}
